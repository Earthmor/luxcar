<% layout('boilerplate') -%>
<h3>Расчет стоимости эвакуатора</h3>
<hr>
<form class="form-horizontal" id="orderForm">
    <fieldset>
        <div class="col-xs-6 form-group">
            <label class="col-lg-3 control-label" for="srcAddress">Откуда:</label>
            <div class="col-lg-9">
                <input class="form-control" id="srcAddress" type="text">
            </div>
        </div>
        <div class="col-xs-6 form-group">
            <label class="col-lg-3 control-label" for="dstAddress">Куда:</label>
            <div class="col-lg-9">
                <input class="form-control" id="dstAddress" type="text">
            </div>
        </div>
        <div class="col-xs-6 form-group">
            <label class="col-lg-3 control-label" for="srcButton">Отметить:</label>
            <div class="col-lg-9">
                <button type="button" id="srcButton" class="btn btn-default pull-right">Отметить</button>
            </div>
        </div>
        <div class="col-xs-6 form-group">
            <label class="col-lg-3 control-label" for="dstButton">Отметить:</label>
            <div class="col-lg-9">
                <button type="button" id="dstButton" class="btn btn-default pull-right">Отметить</button>
            </div>
        </div>
        <div class="col-xs-4 form-group">
            <label class="col-lg-3 control-label" for="vehicleWeight">Масса автомобиля:</label>
            <div class="col-lg-9">
                <select class="form-control" id="vehicleWeight">
                    <option value="0">До 1000 кг</option>
                    <option value="1">До 1500 кг</option>
                    <option value="2">До 2000 кг</option>
                    <option value="3">До 2500 кг</option>
                    <option value="4">До 3500 кг</option>
                </select>
            </div>
        </div>
        <div class="col-xs-4 form-group">
            <div class="checkbox">
                <label class="col-lg-3 control-label" for="nigthRate">Ночной тариф</label>
                <div class="col-lg-9">
                    <input type="checkbox" id="nigthRate">
                </div>
            </div>
        </div>
        <div class="col-xs-12 form-group">
            <button type="button" id="calcButton" class="btn btn-success pull-right">Расчитать</button>
        </div>
        <hr class="col-xs-12">
        <div id="map" style="width: 100%; height: 500px;"></div>
